<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.StepsViewActivity">

    <com.example.myapplication.view.NodeProgressView
        android:id="@+id/progress"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        app:h_bg_color="#4DFFFFFF"
        app:h_bg_radius="3dp"
        app:h_bg_width="2dp"
        app:h_max_step="30"
        app:h_pro_color="#EED6AC"
        app:h_pro_radius='3dp'
        app:h_pro_step="8"
        app:h_pro_width="2dp"
        app:h_text_padding="20dp"
        app:h_text_size="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/plusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress"
        android:layout_marginTop="50dp"
        android:text="增加"/>

    <Button
        android:id="@+id/minusBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progress"
        android:layout_marginTop="50dp"
        android:text="减少"/>

    <TextView
        android:id="@+id/roundBtn"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:text="今天"
        android:textColor="#9CD7FF"
        android:gravity="center"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/plusBtn"/>



</androidx.constraintlayout.widget.ConstraintLayout>